<!DOCTYPE html>
<html>
<head>
  <title>EdusonTestTask</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <header>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to '', root_path, class: 'navbar-brand glyphicon glyphicon-home' %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
              <li><%= link_to t(:my_collections), user_media_path %></li>
              <li><%= link_to t(:logout), destroy_user_session_path, method: :delete %></li>
          <% else %>
              <li><%= link_to t(:login), new_user_session_path %></li>
              <li><%= link_to t(:sign_up), new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>


  <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
      <p class="alert alert-info"><%= alert %></p>
  <% end %>

  <%= yield %>
</div>

<footer>
</footer>

</body>
</html>
